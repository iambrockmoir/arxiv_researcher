{
    "version": 2,
    "functions": {
        "api/*.py": {
            "runtime": "python3.9",
            "memory": 1024,
            "maxDuration": 300
        }
    },
    "env": {
        "PYTHONPATH": "."
    },
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/$1"
        }
    ]
} 