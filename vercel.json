{
    "version": 2,
    "functions": {
        "api/*.py": {
            "runtime": "python3.9",
            "memory": 1024,
            "maxDuration": 300
        }
    },
    "env": {
        "PYTHONPATH": ".",
        "PYTHONUNBUFFERED": "1"
    },
    "builds": [
        {
            "src": "api/search.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxDuration": 300
            }
        }
    ],
    "routes": [
        {
            "src": "/api/search",
            "methods": ["POST", "OPTIONS"],
            "dest": "/api/search.py"
        }
    ]
} 